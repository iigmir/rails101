<div class="col-md-12">
  <h2 class="text-center"></h2>
  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Name</th>
        <th>Last update</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |p| %>
        <tr>
          <td><%= p.content %></td>
          <td><%= p.group.title %></td>
          <td><%= p.updated_at%></td>
          <td><%= link_to("Edit",edit_group_post_path(p.group,p),class:"btn btn-default btn-xs") %></td>
          <td><%= link_to("Delete",group_post_path(p.group,p),method: :delete,data:{ confirm:"Sure?" },class:"btn btn-default btn-xs" ) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
